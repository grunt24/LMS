@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}
<div class="row justify-content-center">
    <div id="Login" class="col-md-6 text-center p-4">
        <section>
            <form method="post">
                <a style="cursor: pointer;">
                    <img class="img-fluid mx-auto d-block mt-4 mb-2" src="~/img/libraryLogo.png" alt="Library Logo" style="width: 80%; height: 80%; ">
                </a>
                <h5 class="text-center" style="color: #333;"> <span>Log in</span> your account</h5>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group my-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" />
                    @*<label asp-for="Input.Email" class="form-label"></label>*@
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="current-password" aria-required="true" type="password" />
                    @*<label asp-for="Input.Password" class="form-label"></label>*@
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label" style="color: #333">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="mt-2">
                    <button id="login-submit" type="submit" class="d-inline w-100 btn px-5 text-white">Log in</button>
                    <div class="mt-3">
                        <span style="color: #333; font-size: 12px;">Don't have an account? <a class="createBtn" style="color: blue; " href="/Identity/Account/Register">Create Now!</a></span>
                    </div>
                </div>
            </form>
        </section>
    </div>
