@model Book

@{
    ViewData["Title"] = "Book Details";
}

<form method="post">
    <div class="card shadow border-0 mt-4 mb-4">
        <div style="background: 
;" class="card-header bg-gradient text-light py-4">
            <div class="row">
                <div class="d-flex flex-row col-12 justify-content-evenly">
                    <div class="col-4 justify-content-center align-items-center ">
                        <a asp-action="Index" class="mb-5 fw-bold btn-sm text-white " style="font-size: 20px">
                            <i class="bi bi-arrow-bar-left"></i>
                        </a>
                    </div>
                    <div class="col-8">
                        <h3 class="text-white text-uppercase fw-bold">@Model.Title</h3>
                        <p class="text-secondary-50 fw-semibold mb-0">by @Model.Author</p>
                    </div>

                </div>
            </div>
        </div>
        <div class="card-body">
@*            <div>
                <h5 class="fw-bold text-dark text-opacity-75">
                    @Model.Title by @Model.Author <hr />
                </h5>
            </div>*@
            <div class="py-3">
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="row py-2">
                            <h6 class="text-dark text-opacity-75"> <strong>Author/s : </strong> <a href="https://www.readanybook.com/author/prince-harry-325925" target="_blank">@Model.Author</a></h6>
                        </div>
                        <div class="row py-2">
                            <h6 class="text-dark text-opacity-75 "> <strong>Genre : </strong> <a href="https://www.readanybook.com/author/prince-harry-325925" target="_blank">@Model.Genre.GenreName</a></h6>
                        </div>
                        <div class="row py-2">
                            <h6 class="text-dark text-opacity-75 "> <strong>ISBN : </strong>@Model.Isbn</h6>
                        </div>
                        <div class="row py-2">
                            <h6 class="text-dark text-opacity-75 ">
                                <strong>Rating : </strong>
                                <span class="">
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-half text-warning"></i>
                                    <i class="bi bi-star text-warning"></i>
                                    <i class="bi bi-star text-warning"></i>
                                    <i class="bi bi-star text-warning"></i>
                                    <i class="bi bi-star text-warning"></i>
                                    <i class="bi bi-star text-warning"></i>
                                </span>


                            </h6>

                        </div>
                        <div class="row text-dark text-opacity-75 ">
                            <p class="lh-sm">@Html.Raw(Model.Description)</p>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-6 pb-1 ">
                                <button type="submit" disabled
                                        class="btn btn-warning bg-gradient w-100 py-2 fw-semibold">
                                    Read this book (coming soon...)
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>